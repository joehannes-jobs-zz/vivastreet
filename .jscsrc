{
    "preset": "airbnb",
    "fileExtensions": [".js"],

    "validateIndentation": "\t",
    "validateQuoteMarks": "\"",
    "requirePaddingNewLinesAfterBlocks": false,
    "requireTrailingComma": false,
    "requireLineFeedAtFileEnd": false,
	"disallowMultipleVarDecl": false,
	"maximumLineLength": 80,

    "excludeFiles": [
        "build/modules/**",
        "package.json",
    ]
}
